<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnBuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Buku"/>

    <Button
        android:id="@+id/btnPeminjam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Peminjam"/>

    <Button
        android:id="@+id/btnPeminjaman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Peminjaman"/>

    <Button
        android:id="@+id/btnPengembalian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Pengembalian"/>

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"/>
</LinearLayout>
